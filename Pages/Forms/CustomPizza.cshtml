@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
	<h1>Create Your Own Pizza!</h1>
	<form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded alert-light col-4 formBackground">
		<input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name...."/>
		<br />
		<input type="checkbox" asp-for="Pizza.TomatoSauce" class="formText" placeholder="Tomato sauce" /> Tomato Sauce
		<br/>
		<input type="checkbox" asp-for="Pizza.Cheese" class="formText" placeholder="Cheese" /> Cheese
		<br />
		<input type="checkbox" asp-for="Pizza.Peperoni" class="formText" placeholder="Peperoni" /> Peperoni
		<br />
		<input type="checkbox" asp-for="Pizza.Mushroom" class="formText" placeholder="Mushroom" /> Mushroom
		<br />
		<input type="checkbox" asp-for="Pizza.Tuna" class="formText" placeholder="Tuna" /> Tuna
		<br />
		<input type="checkbox" asp-for="Pizza.Pineapple" class="formText" placeholder="Pineapple" /> Pineapple
		<br />
		<input type="checkbox" asp-for="Pizza.Ham" class="formText" placeholder="Ham" /> Ham
		<br />
		<input type="checkbox" asp-for="Pizza.Beef" class="formText" placeholder="Beef" /> Beef
		<br />

		<button class="btn btn-primary mt-1 buttonSpecial" type="submit">Order My Pizza</button>
	</form>
</div>
